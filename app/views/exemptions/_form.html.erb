
<%= simple_form_for(@exemption) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :exempt_dat %>
    <%= f.input :exempt_msg %>
    <%= f.input :lunch %>
    <%= f.input :dinner %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
