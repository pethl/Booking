
<%= simple_form_for @opening_hour do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  <table>
  <tr>
  <td><%= Date::DAYNAMES[@opening_hour.day] %></td>
  <td class="th-lg"></td>
  <td class="align-bottom"><%= f.input :open %></td>
  </table>
  </div>
 
  <div id="sittings">
  <%= f.simple_fields_for :sittings do |sitting| %>
    <table>
    <%= render 'sitting_fields', f: sitting %>
    <% end %>
    </table>
  </div>
  
  <div class="links">
  <%= link_to_add_association 'Add Sitting', f, :sittings, partial: 'sitting_fields' %>
  </div>
  
  <div class="form-actions">
  <%= f.button :submit %>
  </div>

<% end %>
